extends layout

block content
  h1= title
  hr

  - var path = "\\images\\";
  - var stringPre = "waffles_";
  - var imageNames = ["banana", "butter", "chocolate", "fruit", "syrup"];
  - var fileType = ".jpg";

  - for(let i=0; i < 3; i++)
      - let choice = Math.floor(Math.random()*5)
      - let sourceString = `${path}${stringPre}${imageNames[choice]}${fileType}`;
      img(src=sourceString, alt=imageNames[choice], height="300", width="300")
